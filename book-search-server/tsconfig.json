{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@web/*": ["src/web/*"],
      "@tests": ["tests/index.ts"]
    },
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
}
